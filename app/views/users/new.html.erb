<div class="max-w-md mx-auto p-6">
  <h1 class="text-2xl font-bold mb-6">新規登録</h1>

  <% if @user.errors.any? %>
    <div class="alert alert-error mb-6">
      <div>
        <p class="font-semibold">入力内容を確認してください</p>
        <ul class="list-disc ml-5 text-sm mt-2">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= form_with model: @user do |f| %>
    <div class="form-control mb-4">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mb-4">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mb-4">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mb-6">
      <%= f.label :password_confirmation, class: "label" %>
      <%= f.password_field :password_confirmation, class: "input input-bordered w-full" %>
    </div>

    <%= f.submit "登録する", class: "btn btn-primary w-full" %>
  <% end %>

  <div class="mt-3 text-center">
    <%= link_to "ログインはこちら", login_path, class: "link link-hover text-sm text-gray-500" %>
  </div>
</div>