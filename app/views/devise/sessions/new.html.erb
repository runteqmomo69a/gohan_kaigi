<div class="min-h-[calc(100vh-64px)] flex items-center justify-center px-4 py-10">
  <div class="card w-full max-w-md bg-base-100 shadow">
    <div class="card-body">
      <h1 class="text-2xl font-bold">ログイン</h1>
      <p class="text-sm text-gray-500">登録済みのメールアドレスでログインします。</p>

      <% if flash.alert.present? %>
        <div class="alert alert-error mt-4">
          <div>
            <p class="font-semibold"><%= flash.alert %></p>
          </div>
        </div>
      <% end %>

      <% if flash.notice.present? %>
        <div class="alert alert-info mt-4">
          <div>
            <p class="font-semibold"><%= flash.notice %></p>
          </div>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mt-6 space-y-4">
          <div class="form-control">
            <%= f.label :email, class: "label" %>
            <%= f.email_field :email, class: "input input-bordered w-full", autofocus: true, autocomplete: "email" %>
          </div>

          <div class="form-control">
            <%= f.label :password, class: "label" %>
            <%= f.password_field :password, class: "input input-bordered w-full", autocomplete: "current-password" %>
          </div>

          <div class="flex items-center justify-between pt-1">
            <%= link_to "パスワードを忘れた方", new_user_password_path, class: "link link-hover text-sm text-gray-500" %>
          </div>

          <div class="pt-2">
            <%= f.submit "ログイン", class: "btn btn-primary w-full" %>
          </div>

          <div class="divider my-2 text-xs text-gray-400">または</div>

          <div class="text-center text-sm">
            <%= link_to "新規登録はこちら", new_user_registration_path, class: "link link-hover text-gray-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>