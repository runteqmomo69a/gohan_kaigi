<div class="max-w-md mx-auto p-6">
  <h1 class="text-2xl font-bold mb-6">パスワードを再設定</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-control mb-4">
      <%= f.label :password, "新しいパスワード", class: "label" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 mb-2">※ <%= @minimum_password_length %> 文字以上</p>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mb-6">
      <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
    </div>

    <%= f.submit "パスワードを更新", class: "btn btn-primary w-full" %>
  <% end %>

  <div class="mt-4 flex justify-center gap-4 text-sm">
    <%= link_to "ログインに戻る", new_user_session_path, class: "link link-hover text-gray-500" %>
    <%= link_to "トップに戻る", root_path, class: "link link-hover text-gray-500" %>
  </div>
</div>