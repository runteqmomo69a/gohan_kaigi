<div class="max-w-md mx-auto p-6">
  <h1 class="text-2xl font-bold mb-6">ログイン</h1>

  <%= form_with url: login_path do |f| %>
    <div class="form-control mb-4">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control mb-6">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, class: "input input-bordered w-full" %>
    </div>

    <%= f.submit "ログイン", class: "btn btn-primary w-full" %>
  <% end %>

  <div class="mt-3 text-center">
    <%= link_to "新規登録はこちら", new_user_path, class: "link link-hover text-sm text-gray-500" %>
  </div>
</div>